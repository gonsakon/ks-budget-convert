<div class="next"><img alt="下一頁" title="下一頁" src="xslGip/unit801/images/button.png"></div>
</div> 
<script type="text/javascript">
$(function(){
var $block = $('#banner2_bannerBlock'),
	$slides = $('ul.list', $block),
	banner2_width = $slides.find('li').width(),
	banner2_animateSpeed = 1000,
	banner2_stop = false,
	bannerTurn = '',
	banner2_rightSize = ($slides.find('li').size()*banner2_width-$block.width())*-1;
	// 移動主函式
	function move(){
		if(bannerTurn=='right'){
			$slides.css({left: banner2_rightSize});
			$slides.stop().animate({
				left: '+='+banner2_width
			}, banner2_animateSpeed, function(){
				$slides.stop().css({left: banner2_rightSize});
				$slides.find('li:last').prependTo($slides);
				if(!banner2_stop){
					window.setTimeout(function(){move()},5000);
				}
			});
		}else{
			$slides.css({left: ''});
			$slides.stop().animate({
				left: '-='+banner2_width
			}, banner2_animateSpeed, function(){
				$slides.stop().css({left: ""});
				$slides.find('li').eq(0).appendTo($slides);
				if(!banner2_stop){
					window.setTimeout(function(){move()},5000);
				}
			});
		}
	}
	// 移動列滑鼠事件
	$slides.hover(function(){
		banner2_stop = true;
	}, function(){
		banner2_stop = false;
		move();
	});
	// 向左鍵事件
	$('#banner2_abgneBlock .prevten').click(function(){$slides.stop();bannerTurn='left';move();});
	// 向右鍵事件
	$('#banner2_abgneBlock .next').click(function(){$slides.stop();bannerTurn='right';move();});
move();
});
</script>
