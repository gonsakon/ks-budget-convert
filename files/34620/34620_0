<style>
html, body {
	margin: 0;
	height: 100%;
}
iframe {
	width: 100%;
	height: 100%;
	border: 0;
	overflow: auto;
}
</style>
<script type="text/javascript" src="tmp_doc/jquery.latest.min.js"></script>
<script type="text/javascript">
var mobiles = new Array(
	"iphone", "ipod", "ipad"
)
var ua = navigator.userAgent.toLowerCase();
//alert(ua);
var isiOS = false;
for (var i = 0; i < mobiles.length; i++) {
	if (ua.indexOf(mobiles[i]) > 0) {
		isiOS = true;
		break;
	}
}

$(function(){
	if(!isiOS){
		$("html, body").css("overflow","hidden");
	}else{
		$("iframe#page_show").load(function(){
			var _ContHeight = $(this).contents().find("body").outerHeight();
			$(this).css("height",_ContHeight);
		});
	}

	if(window.location.hash){
		var _NowHash = window.location.hash.replace("#","");
		//console.log(_NowHash);
		$("iframe#page_show").attr("src","./web/index.php?"+_NowHash);
	}
});
</script>
<!--<script type="text/javascript">window.location.href="../";</script>-->
</head>

<body>
<iframe title="iframe" src="./web/" marginheight="0" id="page_show" marginwidth="0" frameborder="0" scrolling="auto"></iframe>
</body>
